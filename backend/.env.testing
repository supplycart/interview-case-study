APP_NAME=LaravelEcommerce
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_FE_URL=http://localhost:5173

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=testing
DB_HOST=db # Service name from docker-compose.yml
DB_PORT=5432
DB_DATABASE=ecommerce_db # Match docker-compose.yml POSTGRES_DB
DB_TEST_DATABASE=ecommerce_db_test # For unit testing
DB_USERNAME=user         # Match docker-compose.yml POSTGRES_USER
DB_PASSWORD=password     # Match docker-compose.yml POSTGRES_PASSWORD

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

CACHE_STORE=redis
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis   # Good for scalability. 'cookie' or 'file' also work.
# CACHE_STORE=database
# CACHE_PREFIX=

REDIS_HOST=redis # Service name from docker-compose.yml
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailhog # Service name for local email testing
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Important for SPA authentication with Vue frontend
SANCTUM_STATEFUL_DOMAINS="localhost:5173,127.0.0.1:5173,your-frontend-domain.com" # Add vite dev server
FRONTEND_URL="http://localhost:5173" # Your Vue dev server URL

# CORS - Adjust if your frontend is served differently or has a different port in production
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"